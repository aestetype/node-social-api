{
  "name": "@aestetype/node-social-api",
  "version": "0.0.6",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "precommit": "yarn format",
    "format": "prettier --single-quote --trailing-comma es5 --write \"{src,__tests__}/**/*.ts\"",
    "prettier-diff": "prettier --single-quote --trailing-comma es5 --list-different \"{src,__tests__}/**/*.ts\"",
    "build": "tsc",
    "lint": "tslint \"{src,__tests__}/**/*.ts\"",
    "testonly": "jest --coverage",
    "test": "yarn lint && yarn testonly && yarn build && yarn prettier-diff"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  },
  "repository": "https://github.com/aestetype/node-social-api.git",
  "author": "Pradel LeÃÅo <pradel.leo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "codecov": "^2.2.0",
    "husky": "^0.14.2",
    "jest": "^20.0.4",
    "nock": "^9.0.13",
    "prettier": "^1.5.2",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/request-promise": "^4.1.35",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  }
}
