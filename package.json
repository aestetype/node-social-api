{
  "name": "@aestetype/node-social-api",
  "version": "0.0.3",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "yarn format",
    "format": "prettier --single-quote --write --trailing-comma es5 \"{src,__tests__}/**/*.ts\" && yarn lint -- --fix",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts' '__tests__/**/*.ts'",
    "testonly": "jest --coverage",
    "test": "yarn lint && yarn testonly && yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true
  },
  "repository": "https://github.com/aestetype/node-social-api.git",
  "author": "Pradel LeÃÅo <pradel.leo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "codecov": "^2.2.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "nock": "^9.0.13",
    "prettier": "^1.4.2",
    "ts-jest": "^20.0.5",
    "tslint": "^5.4.2",
    "tslint-config-airbnb": "^5.0.1",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/request-promise": "^4.1.33",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  }
}
